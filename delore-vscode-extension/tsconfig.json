{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2021",

    // "sourceMap": true,
    "outDir": "out",
    "lib": ["ES2021"],

    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true

    // enable import JSON file
    // NOTE: it's better to use 'fs' package
    // "esModuleInterop": true,
    // "resolveJsonModule": true
  },
  "exclude": ["src-legacy", "test_functions"]
}
